spacebar -m config spaces               on
spacebar -m config clock                on
spacebar -m config power                on
spacebar -m config padding_left         30
spacebar -m config padding_right        30
spacebar -m config spacing_left         35
spacebar -m config spacing_right        35
spacebar -m config text_font            "MartianMono Nerd Font:Regular:16.0"
spacebar -m config icon_font            "MartianMono Nerd Font:Regular:22.0"
spacebar -m config background_color     0xfa121212
spacebar -m config foreground_color     0xff555555
spacebar -m config space_icon_color     0xffbbbbbb
spacebar -m config power_icon_color     0xaf9cf7a3
spacebar -m config battery_icon_color   0xaf9ed0ff
spacebar -m config dnd_icon_color       0xffa8a8a8
spacebar -m config clock_icon_color     0xffa8a8a8
spacebar -m config power_icon_strip      
spacebar -m config space_icon_strip     󰇊 󰇋 󰇌 󰇍 󰇎 󰇏 7 8 9
spacebar -m config space_icon           
spacebar -m config clock_icon           
spacebar -m config dnd_icon             
